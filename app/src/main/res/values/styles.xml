<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueButton">
        <item name="android:background">@drawable/btn_rounded_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_font_size</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_background</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textSize">@dimen/font_size_signup</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CrossButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/cross</item>
    </style>

    <style name="CameraIcon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="Tick">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="CheckText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>